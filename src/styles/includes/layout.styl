/* ==============================================
    Main layout. Sticky footer
============================================== */

html
  height 100%

body
  height auto !important
  height 100%
  min-height 100%
  position relative

.page-header
  clear()

main
  padding-bottom $footer-height + $footer-margin

.page-footer
  position absolute
  bottom 0
  height $footer-height
  width 100%

.container
  clear()
  width $container-width
  margin 0 auto
  position relative

/* ==============================================
    Rows & cols
============================================== */

.row
  clear()
  .col
    float left
  
